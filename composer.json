{
  "name": "tekintian/pinyin",
  "description": "完美的汉字转拼音工具，支持自定义映射、特殊字符处理和自动学习功能。",
  "keywords": [
    "拼音",
    "汉字转拼音",
    "chinese",
    "pinyin",
    "chinese to pinyin",
    "cn2pinyin"
  ],
  "homepage": "https://github.com/tekintian/pinyin",
  "license": "MIT",
  "authors": [
    {
      "name": "tekintian",
      "homepage": "http://dev.tekin.cn",
      "email": "tekintian@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "tekintian\\pinyin\\": "src/",
      "tekintian\\pinyin\\unicode\\": "unicode/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require": {
    "php": "^7.2 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^1.12"
  },
  "extra": {
      "branch-alias": {
        "dev-prod": "1.x-dev"
      }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs src tests",
    "fix-style": "phpcbf src tests",
    "phpstan": "phpstan analyse src --level=5"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}