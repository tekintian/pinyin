// è§£æå‘½ä»¤è¡Œå‚æ•°
function parseArguments($argv) {
    global $options;
    
    $inputText = '';
    $args = [];
    
    for ($i = 1; $i < count($argv); $i++) {
        $arg = $argv[$i];
        
        if (strpos($arg, '--') === 0) {
            // é•¿é€‰é¡¹
            $parts = explode('=', substr($arg, 2), 2);
            $key = $parts[0];
            $value = $parts[1] ?? true;
            
            if (isset($options[$key])) {
                $options[$key] = $value;
            }
        } elseif (strpos($arg, '-') === 0) {
            // çŸ­é€‰é¡¹
            $key = substr($arg, 1);
            
            // æ£€æŸ¥æ˜¯å¦ä¸ºå¸¦å€¼çš„çŸ­é€‰é¡¹ï¼ˆ-s=valueå½¢å¼ï¼‰
            if (strlen($key) > 1 && strpos($key, '=') !== false) {
                $parts = explode('=', $key, 2);
                $key = $parts[0];
                $value = $parts[1];
            } 
            // æ£€æŸ¥æ˜¯å¦ä¸ºéœ€è¦å€¼çš„çŸ­é€‰é¡¹ï¼ˆ-s valueå½¢å¼ï¼‰
            elseif (in_array($key, ['s', 'm', 'a', 'r'])) {
                // ä¿®å¤ï¼šå¦‚æœä¸‹ä¸€ä¸ªå‚æ•°å­˜åœ¨ï¼Œå°±ç›´æ¥ä½¿ç”¨å®ƒï¼Œæ— è®ºå®ƒæ˜¯å¦ä»¥'-'å¼€å¤´
                if ($i + 1 < count($argv)) {
                    $value = $argv[$i + 1];
                    $i++;
                } else {
                    $value = true;
                }
            } else {
                $value = true;
            }
            
            // æ˜ å°„çŸ­é€‰é¡¹åˆ°é•¿é€‰é¡¹
            $mapping = [
                's' => 'separator',
                't' => 'with-tone',
                'm' => 'mode',
                'u' => 'slug',
                'j' => 'json',
                'c' => 'compact',
                'a' => 'add-custom',
                'r' => 'remove-custom',
                'h' => 'help'
            ];
            
            if (isset($mapping[$key])) {
                $options[$mapping[$key]] = $value;
            }
        } else {
            // è¾“å…¥æ–‡æœ¬
            if (empty($inputText)) {
                $inputText = $arg;
            } else {
                $inputText .= ' ' . $arg;
            }
        }
    }
    
    return $inputText;
}

// ä¸»ç¨‹åº
function main($argv) {
    global $options, $help;
    
    $inputText = parseArguments($argv);
    
    // æ˜¾ç¤ºå¸®åŠ©
    if ($options['help'] || (empty($inputText) && !$options['add-custom'] && !$options['remove-custom'] && !$options['merge-self-learn'] && !$options['check-custom'] && !$options['fix-custom'])) {
        echo $help;
        exit(0);
    }
    
    // åˆ›å»ºè½¬æ¢å™¨å®ä¾‹
    $converter = new PinyinConverter();
    
    // å¤„ç†è‡ªå®šä¹‰å­—å…¸æ“ä½œ
    if ($options['add-custom']) {
        $parts = explode(':', $options['add-custom'], 2);
        if (count($parts) === 2) {
            $char = trim($parts[0]);
            $pinyin = trim($parts[1]);
            $converter->addCustomPinyin($char, $pinyin, $options['with-tone']);
            echo "âœ… å·²æ·»åŠ è‡ªå®šä¹‰æ‹¼éŸ³: {$char} â†’ {$pinyin}\n";
        } else {
            echo "âŒ æ— æ•ˆçš„è‡ªå®šä¹‰æ‹¼éŸ³æ ¼å¼ï¼Œè¯·ä½¿ç”¨ æ±‰å­—:æ‹¼éŸ³ æ ¼å¼\n";
            exit(1);
        }
        exit(0);
    }
    
    if ($options['remove-custom']) {
        $char = trim($options['remove-custom']);
        $converter->removeCustomPinyin($char, $options['with-tone']);
        echo "âœ… å·²åˆ é™¤è‡ªå®šä¹‰æ‹¼éŸ³: {$char}\n";
        exit(0);
    }
    
    // å¤„ç†è‡ªå­¦ä¹ å­—å…¸åˆå¹¶
    if ($options['merge-self-learn']) {
        $result = $converter->executeMerge();
        echo "ğŸ“Š è‡ªå­¦ä¹ å­—å…¸åˆå¹¶å®Œæˆ:\n";
        echo "   æˆåŠŸåˆå¹¶: " . implode(', ', $result['success']) . "\n";
        if (!empty($result['fail'])) {
            echo "   å¤±è´¥é¡¹ç›®: " . count($result['fail']) . "\n";
            foreach ($result['fail'] as $fail) {
                echo "     - {$fail['toneType']}: {$fail['error']}\n";
            }
        }
        exit(0);
    }
    
    // æ£€æŸ¥è‡ªå®šä¹‰å­—å…¸
    if ($options['check-custom']) {
        $result = $converter->checkAndFixCustomDict($options['with-tone'], false, $options['verbose']);
        echo "ğŸ” è‡ªå®šä¹‰å­—å…¸æ£€æŸ¥ç»“æœ:\n";
        echo "   æ€»æ¡ç›®æ•°: {$result['total_entries']}\n";
        echo "   æœ‰æ•ˆæ¡ç›®: {$result['valid_entries']}\n";
        echo "   å‘ç°é—®é¢˜: {$result['issues_found']}\n";
        
        if ($options['verbose'] && !empty($result['details'])) {
            echo "\nğŸ“‹ è¯¦ç»†é—®é¢˜æŠ¥å‘Š:\n";
            foreach ($result['details'] as $detail) {
                echo "   - å­—ç¬¦: {$detail['char']}\n";
                echo "     æ‹¼éŸ³: " . implode(', ', $detail['pinyin']) . "\n";
                if (!empty($detail['issues'])) {
                    echo "     é—®é¢˜: " . implode('; ', $detail['issues']) . "\n";
                }
                if (!empty($detail['suggestions'])) {
                    echo "     å»ºè®®: " . implode('; ', $detail['suggestions']) . "\n";
                }
                echo "\n";
            }
        }
        exit(0);
    }
    
    // ä¿®å¤è‡ªå®šä¹‰å­—å…¸
    if ($options['fix-custom']) {
        $result = $converter->checkAndFixCustomDict($options['with-tone'], true, $options['verbose']);
        echo "ğŸ”§ è‡ªå®šä¹‰å­—å…¸ä¿®å¤å®Œæˆ:\n";
        echo "   æ€»æ¡ç›®æ•°: {$result['total_entries']}\n";
        echo "   æœ‰æ•ˆæ¡ç›®: {$result['valid_entries']}\n";
        echo "   å‘ç°é—®é¢˜: {$result['issues_found']}\n";
        echo "   ä¿®å¤é—®é¢˜: {$result['issues_fixed']}\n";
        
        if ($options['verbose'] && !empty($result['details'])) {
            echo "\nğŸ“‹ ä¿®å¤è¯¦æƒ…:\n";
            foreach ($result['details'] as $detail) {
                echo "   - å­—ç¬¦: {$detail['char']}\n";
                if (isset($detail['fix_applied'])) {
                    echo "     åŸæ‹¼éŸ³: " . implode(', ', $detail['pinyin']) . "\n";
                    echo "     æ–°æ‹¼éŸ³: " . implode(', ', $detail['fix_applied']) . "\n";
                } else {
                    echo "     æ‹¼éŸ³: " . implode(', ', $detail['pinyin']) . "\n";
                }
                if (!empty($detail['issues'])) {
                    echo "     é—®é¢˜: " . implode('; ', $detail['issues']) . "\n";
                }
                echo "\n";
            }
        }
        exit(0);
    }
    
    // æ‰§è¡Œæ‹¼éŸ³è½¬æ¢
    if (!empty($inputText)) {
        if ($options['slug']) {
            // URL Slug æ¨¡å¼
            // ä¿®å¤ï¼šç¡®ä¿æ­£ç¡®å¤„ç†åˆ†éš”ç¬¦å‚æ•°ï¼Œå¹¶ä¸”å¿½ç•¥with-toneå‚æ•°
            $slugSeparator = $options['separator'] !== ' ' ? $options['separator'] : '-';
            $result = $converter->getUrlSlug($inputText, $slugSeparator);
        } else {
            // æ™®é€šè½¬æ¢æ¨¡å¼
            $specialCharParam = $options['mode'] === 'replace' 
                ? ['mode' => 'replace', 'map' => []] 
                : $options['mode'];
            
            $result = $converter->convert(
                $inputText,
                $options['separator'],
                $options['with-tone'],
                $specialCharParam
            );
        }
        
        // è¾“å‡ºç»“æœ
        if ($options['json']) {
            $jsonOptions = JSON_UNESCAPED_UNICODE;
            if (!$options['compact']) {
                $jsonOptions |= JSON_PRETTY_PRINT;
            }
            
            $output = [
                'input' => $inputText,
                'output' => $result,
                'options' => [
                    'separator' => $options['separator'],
                    'with_tone' => $options['with-tone'],
                    'mode' => $options['mode'],
                    'is_slug' => $options['slug']
                ]
            ];
            
            echo json_encode($output, $jsonOptions) . "\n";
        } else {
            echo $result . "\n";
        }
    }
}

// æ‰§è¡Œä¸»ç¨‹åº
main($argv);